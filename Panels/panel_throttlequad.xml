<?xml version="1.0"?>

<!-- Grumman Goose Hotspot panel    -->
<!-- Gary R. Neely 'Buckaroo', 2009 -->


<PropertyList>

<name>ThrottleQuad Panel</name>
<background>Aircraft/Goose/Panels/transparent-bg.rgb</background>
<w>64</w>
<h>84</h>

<instruments>

  <instrument>
    <name>panel hotspots</name>
    <x>32</x>
    <y>42</y>
    <w>64</w>
    <h>84</h>
    <w-base>64</w-base>
    <h-base>84</h-base>

    <actions>

<!-- Throttle controls -->

      <action>
        <name>ThrottleL Inc</name>
        <button>0</button>
        <x>-32</x>
        <y>-42</y>
        <w>32</w>
        <h>42</h>
        <binding>
          <command>property-adjust</command>
          <property>/controls/engines/engine[0]/throttle</property>
          <step>0.1</step>
          <min>0</min>
          <max>1.0</max>
          <wrap>false</wrap>
        </binding>
      </action>

      <action>
        <name>ThrottleL Dec</name>
        <button>1</button>
        <x>-32</x>
        <y>-42</y>
        <w>32</w>
        <h>42</h>
        <binding>
          <command>property-adjust</command>
          <property>/controls/engines/engine[0]/throttle</property>
          <step>-0.1</step>
          <min>0</min>
          <max>1.0</max>
          <wrap>false</wrap>
        </binding>
      </action>

      <action>
        <name>ThrottleR Inc</name>
        <button>0</button>
        <x>0</x>
        <y>-42</y>
        <w>32</w>
        <h>42</h>
        <binding>
          <command>property-adjust</command>
          <property>/controls/engines/engine[1]/throttle</property>
          <step>0.1</step>
          <min>0</min>
          <max>1.0</max>
          <wrap>false</wrap>
        </binding>
      </action>

      <action>
        <name>ThrottleR Dec</name>
        <button>1</button>
        <x>0</x>
        <y>-42</y>
        <w>32</w>
        <h>42</h>
        <binding>
          <command>property-adjust</command>
          <property>/controls/engines/engine[1]/throttle</property>
          <step>-0.1</step>
          <min>0</min>
          <max>1.0</max>
          <wrap>false</wrap>
        </binding>
      </action>

    </actions>

  </instrument>

</instruments>

</PropertyList>


